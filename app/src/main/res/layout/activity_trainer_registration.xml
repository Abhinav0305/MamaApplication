<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mudaribak.manishsingh.example.com.mamaapplication.TrainerRegistration">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editFName"
        android:background="@android:drawable/editbox_background"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz.@' '"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewFirstName"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editLName"
        android:background="@android:drawable/editbox_background"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-' '"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textViewLastName"
        android:layout_alignStart="@+id/textNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextNumber"
        android:background="@android:drawable/editbox_background"
        android:digits="0123456789"
        android:layout_below="@+id/textNumber"
        android:layout_alignStart="@+id/textNumber" />

    <Button
        android:text="Submit"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsubmit"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        style="@android:style/Widget.Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <TextView
        android:text="First Name"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFirstName"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editFName"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Last Name"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLastName"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_below="@+id/editFName"
        android:layout_alignStart="@+id/editFName" />

    <TextView
        android:text="Mobile Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNumber"
        android:textSize="25dp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/editLName"
        android:layout_alignStart="@+id/editFName" />

</RelativeLayout>

